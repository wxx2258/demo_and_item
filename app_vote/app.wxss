Page{
    height: 100%;
}
.container{
    /*position: relative;*/
    width: 750rpx;
    height: 100%;
    /*font-size: 13px;*/
    box-sizing: border-box;
}

/*搜索框*/
.search_view{
    height: 50rpx;
    background-color: #88888a;
    padding: 15rpx 0;
}
.for_bug{
    position: relative;
    width:700rpx;
    height: 50rpx;
    background: #fff;
    border-radius: 10rpx;
    border:1rpx solid #fff ;
    margin: 0 auto ;
}
.focus_search_image{
    width:30rpx;
    position: absolute;
    top: 50%;
    transform: translateY(-15rpx);
    margin-left: 10rpx;
}
.blur_search_image{
    width:30rpx;
    position: absolute;
    top: 50%;
    transform: translateY(-15rpx);
    margin-left: 10rpx;   
    left: 235rpx;
}
.search_input{
    font-size: 25rpx;
    margin-left: 50rpx;
    height: 50rpx;
    line-height: 50rpx;
    color: #88888a;
}
