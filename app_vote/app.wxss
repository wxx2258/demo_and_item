.theme_item{
    font-weight: 600;
    font-size: 33rpx;
    height: 100rpx;
    line-height: 100rpx;
    overflow: hidden;
}
.theme_item:nth-child(n+3) .text_item_first,
.theme_item:nth-child(n+3) .text_item_end{
    display: inline-block;
    color:#000;
    
    
}
.theme_item:nth-child(n+3) .text_item_end{
    color:#1aad19;
}

.theme_item:nth-child(-n+3) .text_item_first,
.theme_item:nth-child(-n+3) .text_item_end{
    display: inline-block;
    color:#f7941d;
}
.theme_item:nth-child(1) .text_item_end{
    margin:0 50rpx 0rpx 10rpx;
}
/*按下项目*/
.theme_item_hover{
    background-color: #ccc;
}
